<Window x:Class="Semana.Conductores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana"
        mc:Ignorable="d"
        Title="Conductores" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
            <Label Content="CONDUCTORES" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="0 20"/>

            <Label Content="Peso Máximo"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Placa"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Peso Vacío"/>
            <TextBox Width="200" Margin="0 5"/>

        </StackPanel>
    </Grid>
</Window>