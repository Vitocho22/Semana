<Window x:Class="Semana.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Inicio de Sesión" Margin="0 0 0 20" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Usuario:" Margin="0 0 0 5"/>
                <TextBox x:Name="txtUsername" Width="200" Height="30" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="0 0 0 10">
                <TextBlock Text="Contraseña:" Margin="0 0 0 5"/>
                <PasswordBox x:Name="txtPassword" Width="200" Height="30" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="Iniciar sesión" Width="100" Height="30" Click="LoginButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
