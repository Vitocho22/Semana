<Window x:Class="Semana.Operaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Semana"
        mc:Ignorable="d"
        Title="Operaciones" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
            <Label Content="Salida" HorizontalAlignment="Center" FontWeight="Bold" FontSize="18" Margin="0 20"/>

            <Label Content="Tipo de Documento"/>
            <ComboBox Width="200" Margin="0 5">
                <ComboBoxItem Content="DNI"/>
                <ComboBoxItem Content="RUC"/>
            </ComboBox>

            <Label Content="Número de Documento"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Peso"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Tipo de Auto"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Nombre del Transportista"/>
            <TextBox Width="200" Margin="0 5"/>

            <Label Content="Fecha y Hora"/>
            <DatePicker Width="200" Margin="0 5"/>
        </StackPanel>
    </Grid>

</Window>
